@model SmtpSettings

@{
    ViewData["Title"] = "Настройки SMTP";
}

<h1>Настройки SMTP</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="SmtpSettings" id="main-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Server" class="control-label font-weight-bold"></label>
                <input asp-for="Server" class="form-control" />
                <span asp-validation-for="Server" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sender" class="control-label font-weight-bold"></label>
                <input asp-for="Sender" class="form-control" />
                <span asp-validation-for="Sender" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SSL" class="control-label font-weight-bold"></label>
                <input asp-for="SSL" class="form-control col-1" />
                <span asp-validation-for="SSL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Port" class="control-label font-weight-bold"></label>
                <input asp-for="Port" class="form-control" />
                <span asp-validation-for="Port" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Login" class="control-label font-weight-bold"></label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label font-weight-bold"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-6"></div>
    <div class="col-md-6">
        <h3>Тест SMTP</h3>
        <form asp-action="Test" id="test-form">
            <div class="form-group">
                <label for="testEmail" class="control-label font-weight-bold">Адресат тестового сообщения</label>
                <input type="email" id="testEmail" name="testEmail" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Отправить" class="btn btn-primary" id="test-button" />
                <span id="test-result" class="ml-2"></span>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/smtp.js" asp-append-version="true"></script>
}