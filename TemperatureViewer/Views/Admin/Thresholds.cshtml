@model IList<int>

<form asp-action="Thresholds" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="row">
        <div class="col-8 col-md-5 col-lg-4">
            <div class="form-group">
                <label class="form-label">Нижний порог</label>
                <input class="form-control" asp-for="@Model[0]" type="number" />
            </div>
            <div class="form-group">
                <label class="form-label">Нижний порог комфорта</label>
                <input class="form-control" asp-for="@Model[1]" type="number" />
            </div>
            <div class="form-group">
                <label class="form-label">Верхний порог комфорта</label>
                <input class="form-control" asp-for="@Model[2]" type="number" />
            </div>
            <div class="form-group">
                <label class="form-label">Верхний порог</label>
                <input class="form-control" asp-for="@Model[3]" type="number" />
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Сохранить"/>
            </div>
        </div>
    </div>
</form>