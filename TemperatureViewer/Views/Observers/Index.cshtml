@model IEnumerable<TemperatureViewer.Models.Observer>

@{
    ViewData["Title"] = "Index";
}

<h1>Наблюдатели</h1>
<hr />

<p>
    <a asp-action="Create">Создать нового</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Email">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
