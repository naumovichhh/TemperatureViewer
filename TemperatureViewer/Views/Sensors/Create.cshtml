@model Sensor

@{
    ViewData["Title"] = "Добавить";
}

<h1>Добавить</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label font-weight-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Uri" class="control-label font-weight-bold"></label>
                <input asp-for="Uri" class="form-control" />
                <span asp-validation-for="Uri" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationId" class="control-label font-weight-bold"></label>
                <select class="form-control selectpicker" asp-for="LocationId">
                    <option selected value=""></option>
                    @foreach (Location option in ViewBag.Locations)
                    {
                        <option value="@option.Id">@option.Name</option>
                    }
                </select>
                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="XPath" class="control-label font-weight-bold"></label>
                <input asp-for="XPath" class="form-control" />
                <span asp-validation-for"XPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Regex" class="control-label font-weight-bold"></label>
                <input asp-for="Regex" class="form-control" />
                <span asp-validation-for"XPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
