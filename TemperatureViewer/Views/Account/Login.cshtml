@model LoginViewModel

@{
    var returnUrl = Context.Request.Query["ReturnUrl"];
}
 
<h1 style="margin-bottom: 40px">Авторизация</h1>
 
<form asp-action="Login" asp-controller="Account" asp-route-returnUrl="@returnUrl" method="post" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="row">
        <div class="col-8 col-md-5 col-lg-4">
            <div class="mb-3">
                <label class="form-label" asp-for="Name">Имя пользователя</label>
                <input class="form-control" type="text" asp-for="Name" />
                <span asp-validation-for="Name" />
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Password">Пароль</label>
                <input class="form-control" asp-for="Password" />
                <span asp-validation-for="Password" />
            </div>
            <div class="form-group">
                <input type="submit" value="Войти" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>