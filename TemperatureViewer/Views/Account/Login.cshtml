@model LoginViewModel

@{
    var returnUrl = Context.Request.Query["ReturnUrl"];
}
 
<div style="margin-bottom: 40px">
    <h1>Авторизация</h1>
    <hr />
</div>
 
<form asp-action="Login" asp-controller="Account" asp-route-returnUrl="@returnUrl" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger validation" ></div>
    <div class="row">
        <div class="col-8 col-md-5 col-lg-4">
            <div class="mb-3 form-group">
                <label class="form-label" asp-for="Name">Имя пользователя</label>
                <input class="form-control" type="text" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
            <div class="mb-3 form-group">
                <label class="form-label" asp-for="Password">Пароль</label>
                <input class="form-control" asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Войти" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
